# Auto detect text files and perform LF normalization
* text=auto

# Laravel specific
*.php text eol=lf
*.blade.php text eol=lf
*.json text eol=lf
*.js text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
phpunit.xml export-ignore
*.log export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Language statistics (for GitHub)
*.blade.php linguist-language=PHP
*.vue linguist-language=Vue
docs/* linguist-documentation
*.md linguist-documentation